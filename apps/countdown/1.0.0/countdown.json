{
  "type": "center",
  "args": {
    "child": {
      "type": "set_value",
      "args": {
        "child": {
          "type": "column",
          "args": {
            "children": [
              {
                "type": "text",
                "args": {
                  "text": "${daysLeft}",
                  "style": {
                    "fontSize": 100.0
                  }
                }
              },
              {
                "type": "text",
                "args": {
                  "text": "${'days left to '+goalName ?? 'your goal'}",
                  "style": {
                    "fontSize": 20.0
                  }
                }
              }
            ],
            "mainAxisAlignment": "center"
          }
        },
        "values": {
          "daysLeft": "${js('var date1 = new Date();var date2 = new Date(\"'+goalDate ?? ''+'\");var diffTime = Math.abs(date2 - date1);Math.ceil(diffTime / (1000 * 60 * 60 * 24));')}"
        }
      }
    }
  }
}