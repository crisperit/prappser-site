{
  "type": "column",
  "args": {
    "mainAxisSize": "max"
  },
  "children": [
    {
      "type": "expanded",
      "id": "messages",
      "child": {
        "type": "save_context",
        "args": {
          "key": "dialogContext"
        },
        "child": {
          "type": "dynamic",
          "id": "items",
          "args": {
            "dynamic": {
              "builderType": "list_view",
              "childTemplate": {
                "id": "{id}",
                "type": "list_tile",
                "args": {
                  "title": {
                    "type": "text",
                    "args": {
                      "text": "{username} at {time.time}"
                    }
                  },
                  "subtitle": {
                    "type": "text",
                    "args": {
                      "text": "{message}"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "type": "form",
      "child": {
        "type": "single_child_scroll_view",
        "args": {
          "padding": [
            16,
            0
          ]
        },
        "child": {
          "type": "container",
          "args": {
            "alignment": "topCenter",
            "width": "infinity"
          },
          "child": {
            "type": "container",
            "args": {
              "constraints": {
                "maxWidth": 450
              }
            },
            "child": {
              "type": "column",
              "args": {
                "mainAxisSize": "min"
              },
              "children": [
                {
                  "type": "sized_box",
                  "args": {
                    "height": 16
                  }
                },
                {
                  "type": "sized_box",
                  "args": {
                    "height": 8
                  }
                },
                {
                  "type": "material",
                  "args": {
                    "borderRadius": 16,
                    "color": "#fff",
                    "elevation": 4,
                    "margin": [
                      0,
                      8
                    ],
                    "padding": 16
                  },
                  "child": {
                    "type": "column",
                    "args": {
                      "mainAxisSize": "min"
                    },
                    "children": [
                      {
                        "type": "row",
                        "children": [
                          {
                            "type": "flexible",
                            "child": {
                              "type": "text_form_field",
                              "id": "username",
                              "args": {
                                "decoration": {
                                  "hintText": "Username:",
                                  "labelText": "Username"
                                },
                                "validators": [
                                  {
                                    "type": "required"
                                  }
                                ]
                              }
                            }
                          },
                          {
                            "type": "flexible",
                            "child": {
                              "type": "text_form_field",
                              "id": "chat_message",
                              "args": {
                                "decoration": {
                                  "hintText": "Message:",
                                  "labelText": "Message"
                                },
                                "validators": [
                                  {
                                    "type": "required"
                                  }
                                ]
                              }
                            }
                          }
                        ]
                      }
                    ]
                  }
                },
                {
                  "type": "set_value",
                  "args": {
                    "currentTimeJsFun": "new Date().toISOString();",
                    "dynamicItemsAdd": {
                      "type": "add",
                      "builder": "items",
                      "target": {
                        "index": -1
                      },
                      "values": {
                        "username": "{{username}}",
                        "time": {
                          "time": "##js(currentTimeJsFun)##"
                        },
                        "message": "{{chat_message}}"
                      }
                    }
                  },
                  "child": {
                    "type": "raised_button",
                    "args": {
                      "color": "#4a95ec",
                      "colorBrightness": "dark",
                      "onPressed": "##dynamic(dynamicItemsAdd)##"
                    },
                    "child": {
                      "type": "container",
                      "args": {
                        "alignment": "center",
                        "width": "infinity"
                      },
                      "child": {
                        "type": "text",
                        "args": {
                          "text": "Send"
                        }
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  ]
}